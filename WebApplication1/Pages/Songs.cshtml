@page "{artistId:int}/{songId:int?}"
@using System.Net
@model AllLyrics.Pages.SongsModel
@{
    ViewData["Title"] = "Songs";
}


<div class="modal-body row" >
    <div class="col-md-4" id="SongList">
        @if (@Model.Artist == null)
        {
            <h5>There is no such artist.</h5>
        }

        else
        {
            <h5>@Model.Artist.Name</h5>
        }
        
        @if (!Model.Songs.Any())
        {
            <p>There are no songs of this artist yet :(</p>
        }

        <ul>
        @foreach (var song in Model.Songs)
        {
            <li><a asp-page="/Songs" asp-route-ArtistId=@song.ArtistId asp-route-SongId=@song.Id>@song.Name</a></li>
        }
        </ul>
    </div>
    <div class="col-md-8" id="SongText">
        @if (Model.CurrentSong == null)
        {

        }
        else
        {
            <h5>@Model.CurrentSong.Name</h5>
            <p> @Html.Raw(@Model.CurrentSong.Text)</p>
        }
    </div>
</div>

